<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/card_background"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackgroundBorderless">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Destination Image -->
        <ImageView
            android:id="@+id/destination_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_sigiriya" />

        <!-- Favorite Icon -->
        <ImageView
            android:id="@+id/bookmark_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="12dp"
            android:background="@drawable/circle_white"
            android:padding="4dp"
            android:src="@drawable/ic_heart"
            android:clickable="true"
            android:focusable="true" />

        <!-- Card Info Overlay at Bottom -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_bottom_overlay"
            android:padding="16dp">

            <!-- Destination Title -->
            <TextView
                android:id="@+id/destination_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sigiriya, Sri Lanka"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <!-- Location and Rating Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Location -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        android:tint="@color/white"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/destination_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sigiriya, Sri Lanka"
                        android:textColor="#B0BEC5"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star"
                        android:tint="@color/white"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/destination_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textColor="#B0BEC5"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
