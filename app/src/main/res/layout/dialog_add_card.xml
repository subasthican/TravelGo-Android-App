<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Card Number -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Number"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/card_number_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1234 5678 9012 3456"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_medium"
        android:background="@drawable/search_bar_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Card Holder Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Holder Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/card_holder_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="John Doe"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_medium"
        android:background="@drawable/search_bar_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Expiry Date and CVV Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Expiry Date -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Date"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/expiry_date_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MM/YY"
                android:inputType="date"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_medium"
                android:background="@drawable/search_bar_background"
                android:padding="16dp" />
        </LinearLayout>

        <!-- CVV -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVV"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/cvv_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="123"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_medium"
                android:background="@drawable/search_bar_background"
                android:padding="16dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Security Note -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”’ Your card information is secure and encrypted"
        android:textColor="@color/gray_medium"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>
