<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <!-- Onboarding Image -->
    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="48dp"
        android:padding="32dp"
        android:background="@drawable/onboarding_image_background"
        android:src="@drawable/ic_globe"
        android:tint="@android:color/white"
        android:elevation="12dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/onboarding_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Discover Amazing Places"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/onboarding_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explore beautiful destinations around Sri Lanka with our carefully curated travel experiences"
        android:textColor="@color/onboarding_text_light"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:alpha="0.9" />

</LinearLayout>
