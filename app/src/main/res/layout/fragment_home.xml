<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_blue_gradient">

    <!-- Header with Logo and Profile -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <!-- Profile Icon -->
        <LinearLayout
            android:id="@+id/profile_logo_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_orange"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MER"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Greeting Section -->
    <LinearLayout
        android:id="@+id/greeting_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Subasthican"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where do you want to go?"
            android:textSize="14sp"
            android:textColor="#B0BEC5" />

    </LinearLayout>

    <!-- Modern Search Bar -->
    <LinearLayout
        android:id="@+id/search_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting_section">

        <!-- Search Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:tint="@color/gray_medium"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search places"
            android:textColor="@color/gray_medium"
            android:textSize="16sp" />

        <!-- Filter Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_filter"
            android:tint="@color/gray_medium" />

    </LinearLayout>

    <!-- Popular Places Section -->
    <LinearLayout
        android:id="@+id/popular_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_section">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Popular places"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Modern Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/filter_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popular_section">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- All Chip (Selected) -->
            <TextView
                android:id="@+id/filter_all"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="All"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/filter_button_selected"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp" />

            <!-- Beach Chip -->
            <TextView
                android:id="@+id/filter_beach"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Beach"
                android:textColor="@color/gray_medium"
                android:textSize="14sp"
                android:background="@drawable/filter_button_unselected"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp" />

            <!-- Mountain Chip -->
            <TextView
                android:id="@+id/filter_mountain"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Mountain"
                android:textColor="@color/gray_medium"
                android:textSize="14sp"
                android:background="@drawable/filter_button_unselected"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp" />

            <!-- City Chip -->
            <TextView
                android:id="@+id/filter_city"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="City"
                android:textColor="@color/gray_medium"
                android:textSize="14sp"
                android:background="@drawable/filter_button_unselected"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Modern Destination Cards with RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/destinations_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_section"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

