<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_blue_gradient">

    <!-- Header  -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />

    </LinearLayout>

    <!-- Greeting Section -->
    <LinearLayout
        android:id="@+id/greeting_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_subasthican"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/where_do_you_want_to_go"
            android:textSize="14sp"
            android:textColor="#B0BEC5" />

    </LinearLayout>

    <!-- Modern Search Bar -->
    <LinearLayout
        android:id="@+id/search_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting_section">

        <!-- Search Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:tint="@color/gray_medium"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/search_places"
            android:textColor="@color/gray_medium"
            android:textSize="16sp" />

        <!-- Filter Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_filter"
            android:tint="@color/gray_medium" />

    </LinearLayout>

    <!-- Popular Places Section -->
    <LinearLayout
        android:id="@+id/popular_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_section">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/popular_places"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

    </LinearLayout>


    <HorizontalScrollView
        android:id="@+id/filter_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popular_section">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- All Chip (Selected) -->
            <TextView
                android:id="@+id/filter_all"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/filter_all"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/filter_button_selected"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <!-- Beach Chip -->
            <TextView
                android:id="@+id/filter_beach"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/filter_beach"
                android:textColor="@color/gray_medium"
                android:textSize="14sp"
                android:background="@drawable/filter_button_unselected"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <!-- Mountain Chip -->
            <TextView
                android:id="@+id/filter_mountain"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/filter_mountain"
                android:textColor="@color/gray_medium"
                android:textSize="14sp"
                android:background="@drawable/filter_button_unselected"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <!-- City Chip -->
            <TextView
                android:id="@+id/filter_city"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/filter_city"
                android:textColor="@color/gray_medium"
                android:textSize="14sp"
                android:background="@drawable/filter_button_unselected"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- ScrollView for all content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_section">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Popular Places Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popular_places_title"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popular_destinations_recycler"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clipToPadding="false"
                android:layout_marginBottom="32dp" />

            <!-- Nearest Places Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nearest_places_title"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nearest_places_recycler"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clipToPadding="false"
                android:layout_marginBottom="32dp" />

            <!-- Go to Favorites Button -->
            <LinearLayout
                android:id="@+id/go_to_favorites_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    android:tint="@color/primary"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go_to_favorites"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Floating AI Chat Button -->
    <LinearLayout
        android:id="@+id/ai_chat_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_orange"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_chat"
            android:tint="@color/white"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        app:itemIconTint="@color/primary"
        app:itemTextColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>

