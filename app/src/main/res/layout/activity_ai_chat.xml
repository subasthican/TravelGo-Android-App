<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_blue_gradient">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:tint="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI Travel Assistant"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Placeholder for alignment -->
        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Chat Container -->
    <LinearLayout
        android:id="@+id/chat_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/card_background"
        android:elevation="8dp">

        <!-- Sample Chat Bubbles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- First Chat Bubble -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_bubble_white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:maxWidth="280dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What should I avoid when creating a startup?"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Second Chat Bubble -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_bubble_light"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:maxWidth="240dp"
                android:layout_gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected and saved readings"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Continue Button -->
            <Button
                android:id="@+id/continue_button"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Continue"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/continue_button_background"
                android:paddingHorizontal="32dp"
                android:clickable="true"
                android:focusable="true" />



        </LinearLayout>

    </LinearLayout>

    <!-- Input Section -->
    <LinearLayout
        android:id="@+id/input_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical">

        <!-- Message Input -->
        <EditText
            android:id="@+id/message_input"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Ask me about travel destinations..."
            android:textColor="@color/black"
            android:textColorHint="@color/gray_medium"
            android:textSize="16sp"
            android:background="@drawable/edittext_border_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:maxLines="3"
            android:inputType="textMultiLine" />

        <!-- Send Button -->
        <ImageView
            android:id="@+id/send_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_send"
            android:tint="@color/white"
            android:background="@drawable/circle_orange"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp"
            android:layout_marginStart="12dp"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Home Icon at Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_home"
            android:tint="@color/white"
            android:scaleType="fitCenter" />

    </LinearLayout>

</LinearLayout>
